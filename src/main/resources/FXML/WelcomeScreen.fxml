<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/18">
    <children>
        <ImageView fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../Images/Backgrounds/eriantys_title.png"/>
            </image>
        </ImageView>
        <Button layoutX="573.0" layoutY="339.0" mnemonicParsing="false" onAction="#startGame" prefHeight="54.0"
                prefWidth="167.0"
                stylesheets="@../CSS/ButtonStyles.css" text="Start game" textFill="#334abc">
            <font>
                <Font name="SansSerif Regular" size="16.0"/>
            </font>
        </Button>
        <Button layoutX="573.0" layoutY="449.0" mnemonicParsing="false" onAction="#setServerIpScene" prefHeight="54.0"
                prefWidth="157.0"
                stylesheets="@../CSS/ButtonStyles.css" text="Change IP"/>
        <TextField fx:id="connectingTextField" alignment="TOP_CENTER" editable="false" layoutX="562.0" layoutY="287.0"
                   styleClass="not-editable" stylesheets="@../CSS/TextFieldStyle.css" text="Connecting to server..."
                   visible="false">
            <font>
                <Font size="15.0"/>
            </font>
        </TextField>
    </children>
</AnchorPane>
